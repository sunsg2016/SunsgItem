<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <Button
                android:id="@+id/Btn_http_request"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/im_bg_shadow"
                android:text="http_request"
                android:visibility="gone" />

            <Button
                android:id="@+id/Btn_http_post"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/Btn_http_request"
                android:text="http_post"
                android:visibility="gone" />

            <Button
                android:id="@+id/installed_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/Btn_http_post"
                android:onClick="installed_apk"
                android:text="本机应用" />

            <Button
                android:id="@+id/slide_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/installed_btn"
                android:layout_toRightOf="@+id/Btn_http_post"
                android:onClick="slide"
                android:text="slide" />

            <Button
                android:id="@+id/volley_http_get"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/installed_btn"
                android:layout_toRightOf="@+id/slide_btn"
                android:onClick="volleyHttpGet"
                android:text="volley_http_get" />

            <Button
                android:id="@+id/my_list_view_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/installed_btn"
                android:layout_toRightOf="@+id/volley_http_get"
                android:onClick="MyistView"
                android:text="my_list_view" />

            <Button
                android:id="@+id/select_city"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/installed_btn"
                android:layout_toRightOf="@+id/my_list_view_btn"
                android:onClick="SelectCity"
                android:text="selelct_city" />

            <Button
                android:id="@+id/imagelistview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/select_city"
                android:onClick="ImageListView"
                android:text="ImageListView" />

            <Button
                android:id="@+id/fragment"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/select_city"
                android:layout_toRightOf="@+id/imagelistview"
                android:onClick="fragment"
                android:text="fragment" />

            <Button
                android:id="@+id/testactivity"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/select_city"
                android:layout_toRightOf="@+id/fragment"
                android:onClick="testactivity"
                android:text="testactivity" />

            <Button
                android:id="@+id/pulltooomactivity"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/testactivity"
                android:onClick="pulltooomactivity"
                android:text="pulltooomactivity" />

            <Button
                android:id="@+id/baidulocation"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/testactivity"
                android:layout_toRightOf="@+id/pulltooomactivity"
                android:onClick="baidulocation"
                android:text="baidulocation" />

            <Button
                android:id="@+id/randomaccessfile"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/testactivity"
                android:layout_toRightOf="@+id/baidulocation"
                android:background="@drawable/shadow_biankuang"
                android:onClick="randomaccessfile"
                android:text="randomaccessfile" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="loopj"
                android:text="loopj" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="loopjSample"
                android:text="loopjSample" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="universalImageLoader"
                android:text="Universal-Image-Loader" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="loginFragment"
                android:text="LoginFragment" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="personalImage"
                android:text="PersonalImage" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="luckDrawActivity"
                android:text="luckDraw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="webview"
                android:text="webview" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="consumeActivity"
                android:text="test move" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testTouchEvent"
                android:text="test_touch_event" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="litePalActivity"
                android:text="LitePalActivity" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testThreadActivity"
                android:text="TestThreadActivity" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="baseJavaTestActivity"
                android:text="BaseJavaTestActivity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sinaShare"
                android:text="SinaShare" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="HorOpenAndCloseView"
                android:text="HorOpenAndCloseView" />
            
            
            
           
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ViewDragHelper"
                android:text="ViewDragHelper" />

            
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>